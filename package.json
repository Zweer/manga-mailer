{
  "name": "manga-mailer",
  "version": "0.0.1",
  "description": "A simple utility which emails you the latest manga",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src lib",
    "format": "prettier . -w",
    "check": "npm run lint && npm run format",
    "prebuild": "rimraf dist",
    "build": "npm run build:manga",
    "build:manga": "esbuild src/manga.ts --bundle --format=cjs --tree-shaking=false --outfile=dist/manga.js",
    "prepush": "npm run check && npm run build",
    "push": "clasp push --force"
  },
  "keywords": [
    "manga",
    "mail"
  ],
  "author": "Zweer <n.olivieriachille@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1"
  },
  "devDependencies": {
    "@google/clasp": "^2.5.0",
    "@shopify/eslint-plugin": "^47.0.1",
    "@tsconfig/node20": "^20.1.4",
    "@types/google-apps-script": "^1.0.97",
    "@types/node": "^22.13.8",
    "@typescript-eslint/parser": "^8.26.0",
    "esbuild": "^0.25.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
